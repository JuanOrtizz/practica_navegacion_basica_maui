<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Ortiz_J_Practica_Navegacion.ViewModels"
             x:Class="Ortiz_J_Practica_Navegacion.MainPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="12" Background="WhiteSmoke">
        <Grid
            Padding="10"
            ColumnDefinitions="*"
            RowDefinitions="*,*"
            HorizontalOptions="Fill"
            VerticalOptions="Center">
            <Label
                Text="Productos"
                FontSize="24"
                TextColor="Black"
                FontAttributes="Bold"
                Grid.Row="0"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                />
            <Label
                Text="Hace clic en un producto para ver sus detalles"
                FontSize="14"
                TextColor="DarkGray"
                Grid.Row="1"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                />
        </Grid>

        <CollectionView
            ItemsSource="{Binding Productos}"
            Margin="10"
            SelectionMode="Single"
            SelectedItem="{Binding ProductoSeleccionado, Mode=TwoWay}">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        x:Name="ProductoBorder"
                        Stroke="DarkGray"
                        Background="LightSlateGray"
                        Padding="10"
                        StrokeShape="RoundRectangle 10">
                        <Label
                            Text="{Binding Nombre}"
                            TextColor="AliceBlue"
                            FontSize="14"
                            FontAttributes="Bold"/>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </VerticalStackLayout>

</ContentPage>

